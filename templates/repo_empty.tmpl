{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h2 class="fw-bold">Quick setup — if you’ve done this kind of thing before</h2>
                <p class="text-muted">Get started by pushing an existing repository or creating a new one.</p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-semibold text-primary">Create a new repository on the command line</h5>
                </div>
                <div class="card-body bg-dark rounded-bottom">
                    <pre class="text-light mb-0"><code># Initialize and push
echo "# {{.RepoName}}" >> README.md
git init
git add README.md
git commit -m "first commit"
git branch -M main
git remote add origin ssh://git@{{.SSHAddr}}/{{.Username}}/{{.RepoName}}.git
git push -u origin main</code></pre>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-semibold text-primary">Push an existing repository</h5>
                </div>
                <div class="card-body bg-dark rounded-bottom">
                    <pre class="text-light mb-0"><code>git remote add origin ssh://git@{{.SSHAddr}}/{{.Username}}/{{.RepoName}}.git
git branch -M main
git push -u origin main</code></pre>
                </div>
            </div>
        </div>
    </div>
</div>

