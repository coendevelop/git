{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}
<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        transition: all 0.2s ease-in-out;
    }
    .card-title a {
        color: #0d6efd;
        font-weight: 600;
    }
    body {
        background-color: #fcfcfc;
    }
</style>
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Public Repositories</h2>
        {{if .IsLoggedIn}}
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRepoModal">
                + New Repository
            </button>
        {{else}}
            <a href="/login" class="btn btn-outline-primary">Login to Create</a>
        {{end}}
    </div>

    <div class="row">
        {{range .Repos}}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">{{.Name}}</h5>
                    <p class="card-text text-muted">Owned by: <strong>{{.Owner}}</strong></p>
                    <a href="/view/{{.Owner}}/{{.Name}}" class="btn btn-sm btn-outline-secondary">Browse Code</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-12 text-center py-5">
            <p class="text-muted">No repositories have been created yet.</p>
        </div>
        {{end}}
    </div>
</div>

{{template "base/footer.tmpl" .}}