{{/* Dashboard template: shows lists of repositories (All, Mine, Favorites).
   Expected data fields: .AllRepos, .MyRepos, .Favorites, .SortKey.
   Rendered by the /dashboard handler. */}}
{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}

<style>
    /* Updated hover effect to use a theme-agnostic shadow */
    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
        transition: all 0.2s ease-in-out;
    }
    
    /* Ensure body background follows theme variables */
    body {
        background-color: var(--bs-body-bg);
    }

    /* Minimalist card styling */
    .repo-card {
        border-color: var(--bs-border-color);
    }
</style>

<div class="container py-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-body fw-bold">Dashboard</h2>
        <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center">
                <label for="sortSelect" class="small text-body-secondary me-2 mb-0">Sort:</label>
                <select id="sortSelect" class="form-select form-select-sm">
                    <option value="recent" {{if eq .SortKey "recent"}}selected{{end}}>Recent</option>
                    <option value="downloads" {{if eq .SortKey "downloads"}}selected{{end}}>Most downloads</option>
                    <option value="alpha" {{if eq .SortKey "alpha"}}selected{{end}}>A → Z</option>
                </select>
            </div>
        </div>
    </div>

    <div>
        <ul class="nav nav-pills mb-4" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab-all-btn" data-bs-toggle="pill" data-bs-target="#tabAll" type="button" role="tab">All Repositories</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-mine-btn" data-bs-toggle="pill" data-bs-target="#tabMine" type="button" role="tab">My Repositories</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-fav-btn" data-bs-toggle="pill" data-bs-target="#tabFav" type="button" role="tab">Favorites <span class="badge bg-secondary ms-2 small">Soon</span></button>
            </li>
        </ul>



        <div class="tab-content repo-list">
            <div class="tab-pane fade show active" id="tabAll" role="tabpanel">
                {{if .AllRepos}}
                <div class="list-group">
                    {{range .AllRepos}}
                    <div class="list-group-item d-flex align-items-center justify-content-between">
                        <div>
                            <a href="/view/{{.Owner}}/{{.Name}}" class="fw-semibold text-decoration-none text-primary">{{.Name}} {{if .IsPrivate}}<span class="badge bg-warning text-dark ms-2">Private</span>{{end}}</a>
                            <div class="meta text-secondary small fw-semibold">Owned by <span class="fw-semibold">{{.Owner}}</span></div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-sm btn-primary star-btn shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1" data-owner="{{.Owner}}" data-repo="{{.Name}}" aria-label="Toggle favorite" aria-pressed="{{if .IsFavorite}}true{{else}}false{{end}}">
                                <span class="star-glyph fs-5">{{if .IsFavorite}}★{{else}}☆{{end}}</span>
                                <span class="small ms-1 star-count">{{.StarCount}}</span>
                            </button>
                            {{if .HasContent}}
                            <a href="/download/view/{{.Owner}}/{{.Name}}/HEAD" class="btn btn-sm btn-primary shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1" title="{{.DownloadCount}} downloads" role="button" aria-label="Download {{.Name}}">
                                <span class="fs-5">⬇</span>
                                <span class="small ms-1">{{.DownloadCount}}</span>
                            </a>
                            {{else}}
                            <button class="btn btn-sm btn-primary shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1 disabled" aria-disabled="true" title="No contents" tabindex="-1" aria-label="No download available">
                                <span class="fs-5">⬇</span>
                                <span class="small ms-1">0</span>
                            </button>
                            {{end}}
                            <a href="/view/{{.Owner}}/{{.Name}}" class="btn btn-sm btn-outline-primary">Browse</a>
                        </div>
                    </div>
                    {{end}}
                </div>
                {{else}}
                <div class="border rounded p-4 text-center bg-body-tertiary">No repositories available.</div>
                {{end}}
            </div>

            <div class="tab-pane fade" id="tabMine" role="tabpanel">
                {{if .MyRepos}}
                <div class="list-group">
                    {{range .MyRepos}}
                    <div class="list-group-item d-flex align-items-center justify-content-between">
                        <div>
                            <a href="/view/{{.Owner}}/{{.Name}}" class="fw-semibold text-decoration-none text-primary">{{.Name}} {{if .IsPrivate}}<span class="badge bg-warning text-dark">Private</span>{{end}}</a>
                            
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-sm btn-primary star-btn shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1" data-owner="{{.Owner}}" data-repo="{{.Name}}" aria-label="Toggle favorite" aria-pressed="{{if .IsFavorite}}true{{else}}false{{end}}">
                                <span class="star-glyph fs-5">{{if .IsFavorite}}★{{else}}☆{{end}}</span>
                                <span class="small ms-1 star-count">{{.StarCount}}</span>
                            </button>
                            {{if .HasContent}}
                            <a href="/download/view/{{.Owner}}/{{.Name}}/HEAD" class="btn btn-sm btn-primary shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1" title="{{.DownloadCount}} downloads" role="button" aria-label="Download {{.Name}}">
                                <span class="fs-5">⬇</span>
                                <span class="small ms-1">{{.DownloadCount}}</span>
                            </a>
                            {{else}}
                            <button class="btn btn-sm btn-primary shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1 disabled" aria-disabled="true" title="No contents" tabindex="-1" aria-label="No download available">
                                <span class="fs-5">⬇</span>
                                <span class="small ms-1">0</span>
                            </button>
                            {{end}}
                            <a href="/view/{{.Owner}}/{{.Name}}" class="btn btn-sm btn-outline-primary">Browse</a>
                        </div>
                    </div>
                    {{end}}
                </div>
                {{else}}
                <div class="border rounded p-4 text-center bg-body-tertiary">You have no repositories yet.</div>
                {{end}}
            </div>

            <div class="tab-pane fade" id="tabFav" role="tabpanel">
                {{if .Favorites}}
                <div class="list-group">
                    {{range .Favorites}}
                    <div class="list-group-item d-flex align-items-center justify-content-between">
                        <div>
                            <a href="/view/{{.Owner}}/{{.Name}}" class="fw-semibold text-decoration-none text-primary">{{.Name}} {{if .IsPrivate}}<span class="badge bg-warning text-dark ms-2">Private</span>{{end}}</a>
                            <div class="meta text-secondary small fw-semibold">Owned by <span class="fw-semibold">{{.Owner}}</span></div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-sm btn-primary star-btn shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1" data-owner="{{.Owner}}" data-repo="{{.Name}}" aria-label="Toggle favorite" aria-pressed="{{if .IsFavorite}}true{{else}}false{{end}}">
                                <span class="star-glyph fs-5">{{if .IsFavorite}}★{{else}}☆{{end}}</span>
                                <span class="small ms-1 star-count">{{.StarCount}}</span>
                            </button>
                            <a href="/download/view/{{.Owner}}/{{.Name}}/HEAD" class="btn btn-sm btn-primary shadow-sm fw-bold px-2 rounded-pill d-inline-flex align-items-center gap-1" title="{{.DownloadCount}} downloads" role="button" aria-label="Download {{.Name}}">
                                <span class="fs-5">⬇</span>
                                <span class="small ms-1">{{.DownloadCount}}</span>
                            </a>
                            <a href="/view/{{.Owner}}/{{.Name}}" class="btn btn-sm btn-outline-primary">Browse</a>
                        </div>
                    </div>
                    {{end}}
                </div>
                {{else}}
                <div class="border rounded p-4 text-center bg-body-tertiary">You haven't favorited any repositories yet.</div>
                {{end}}
            </div>
        </div>
    </div>
</div>

<script>
    // Sorting control: change URL search param while preserving hash (active tab)
    document.getElementById('sortSelect').addEventListener('change', function (e) {
        const val = e.target.value;
        const hash = location.hash || '#tabAll';
        // Keep the selected tab and change the sort param
        const searchParams = new URLSearchParams(window.location.search);
        searchParams.set('sort', val);
        window.location.search = searchParams.toString();
        window.location.hash = hash;
    });

    // Favorite handling is handled globally in the footer so it works across pages
</script>

{{template "base/footer.tmpl" .}}