{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}

<style>
    /* Updated hover effect to use a theme-agnostic shadow */
    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
        transition: all 0.2s ease-in-out;
    }
    
    /* Ensure body background follows theme variables */
    body {
        background-color: var(--bs-body-bg);
    }

    /* Minimalist card styling */
    .repo-card {
        border-color: var(--bs-border-color);
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-body fw-bold">Public Repositories</h2>
        {{if .IsLoggedIn}}
            <a class="btn btn-outline-primary" href="/view/{{.Username}}">My Repositories</a>
        {{else}}
            <p></p>
        {{end}}
    </div>

    <div class="row">
        {{range .Repos}}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 repo-card hover-shadow bg-body-tertiary">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">
                        <a href="/view/{{.Owner}}/{{.Name}}" class="text-decoration-none text-primary">
                            {{.Name}}
                        </a>
                    </h5>
                    <p class="card-text text-body-secondary small mb-4">
                        Owned by: <span class="text-body fw-semibold">{{.Owner}}</span>
                    </p>
                    <div class="mt-auto">
                        <a href="/view/{{.Owner}}/{{.Name}}" class="btn btn-sm btn-outline-secondary w-100">
                            Browse Code
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-12 text-center py-5 border rounded bg-body-tertiary">
            <p class="text-body-secondary mb-0">No repositories have been created yet.</p>
        </div>
        {{end}}
    </div>
</div>

{{template "base/footer.tmpl" .}}