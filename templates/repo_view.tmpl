{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}
<style>
    .breadcrumb-item + .breadcrumb-item::before { content: "/"; }
    .list-group-item-action:hover {
        background-color: #f8f9fa;
        color: #0d6efd;
    }
    .breadcrumb { border: 1px solid rgba(0,0,0,.05); }
</style>
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-light p-3 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/view/{{.RepoName}}" class="text-decoration-none">{{.RepoName}}</a></li>
            {{if .CurrentPath}}
                <li class="breadcrumb-item active" aria-current="page">{{.CurrentPath}}</li>
            {{end}}
        </ol>
    </nav>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <span class="fw-bold text-dark">Files</span>
            <span class="badge bg-secondary rounded-pill">{{len .Files}} items</span>
        </div>
        <div class="list-group list-group-flush">
            {{range .Files}}
            <a href="/view/{{$.Username}}/{{$.RepoName}}/{{if $.CurrentPath}}{{$.CurrentPath}}/{{end}}{{.Name}}" 
               class="list-group-item list-group-item-action d-flex align-items-center py-3">
                
                <span class="me-3 fs-5">
                    {{if .Mode.IsFile}}
                        ğŸ“„ {{else}}
                        ğŸ“ {{end}}
                </span>

                <span class="flex-grow-1">{{.Name}}</span>
                <span class="text-muted small d-none d-md-inline">View details</span>
            </a>
            {{else}}
            <div class="list-group-item text-center py-5 text-muted">
                This directory is empty.
            </div>
            {{end}}
        </div>
    </div>
</div>

{{template "base/footer.tmpl" .}}