{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}
<style>
    .breadcrumb-item + .breadcrumb-item::before { content: "/"; }
    .list-group-item-action:hover {
        background-color: #f8f9fa;
        color: #0d6efd;
    }
    .breadcrumb { border: 1px solid rgba(0,0,0,.05); }
</style>
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-primary">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="/view/{{$.Owner}}">{{$.Owner}}</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="/view/{{$.Owner}}/{{.RepoName}}">{{.RepoName}}</a></li>
        </ol>
    </nav>

    <div class="d-flex align-items-center mb-4">
        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
            <i class="bi bi-journal-bookmark-fill fs-4"></i>
        </div>
        <div>
            <h2 class="mb-0">
                <span class="text-muted fw-light">{{.Owner}} /</span> {{.RepoName}}
            </h2>
            {{if .LastCommit}}
                <p class="text-muted small mb-0">
                    Latest commit: <span class="font-monospace">{{printf "%.7s" .LastCommit.Hash}}</span> 
                    â€” {{.LastCommit.Message}}
                </p>
            {{end}}
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <span class="fw-bold text-dark">Files</span>
            <span class="badge bg-secondary rounded-pill">{{len .Files}} items</span>
        </div>
        <div class="list-group list-group-flush">
            {{range .Files}}
            <a href="/view/{{$.Owner}}/{{$.RepoName}}/{{if $.CurrentPath}}{{$.CurrentPath}}/{{end}}{{.Name}}" 
               class="list-group-item list-group-item-action d-flex align-items-center py-3">
                
                <span class="me-3 fs-5">
                    {{if .Mode.IsFile}}
                        ğŸ“„ {{else}}
                        ğŸ“ {{end}}
                </span>

                <span class="flex-grow-1">{{.Name}}</span>
                <span class="text-muted small d-none d-md-inline">View details</span>
            </a>
            {{else}}
            <div class="list-group-item text-center py-5 text-muted">
                This directory is empty.
            </div>
            {{end}}
        </div>
    </div>
</div>

{{template "base/footer.tmpl" .}}