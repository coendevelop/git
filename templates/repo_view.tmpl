{{/* Unified Repository View: Handles Directory Listing, File Viewing, Commit History, and Diffs */}}
{{template "base/header.tmpl" .}}
{{template "base/navbar.tmpl" .}}

{{if or .IsFile .IsDiffView}}
<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css" rel="stylesheet" id="prism-light" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" id="prism-dark" disabled />
{{end}}

<style>
    .breadcrumb-item + .breadcrumb-item::before { 
        content: "/"; 
        color: var(--bs-secondary-color);
    }
    .list-group-item-action:hover {
        background-color: var(--bs-body-tertiary-bg);
        color: var(--bs-primary);
    }
    .setup-code {
        background-color: var(--bs-tertiary-bg);
        border: 1px solid var(--bs-border-color);
        color: var(--bs-body-color);
    }
    .code-container {
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid var(--bs-border-color);
    }
    pre {
        margin-bottom: 0;
        border-radius: 0;
    }
    .commit-hash {
        font-family: var(--bs-font-monospace);
        font-size: 0.85em;
    }
    /* Diff specific styling */
    code.language-diff {
        display: block;
        white-space: pre-wrap;
    }
    /* Editor specific styling */
    .editor-textarea {
        font-family: var(--bs-font-monospace);
        font-size: 14px;
        tab-size: 4;
        resize: vertical;
        border: none;
        border-radius: 0;
    }
</style>

<div class="container py-0">
    {{/* Header Section: Stats and Actions */}}
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1 fs-4">
                    <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none text-secondary">repos</a></li>
                    <li class="breadcrumb-item"><a href="/view/{{.Owner}}/{{.RepoName}}" class="text-decoration-none fw-bold text-primary">{{.Owner}} / {{.RepoName}}</a></li>
                </ol>
            </nav>
        </div>
        
        <div class="d-flex gap-2">
            <button class="btn btn-sm btn-outline-secondary shadow-sm star-btn {{if .IsFavorite}}active{{end}}" 
                    data-owner="{{.Owner}}" data-repo="{{.RepoName}}" 
                    aria-pressed="{{if .IsFavorite}}true{{else}}false{{end}}">
                <span class="star-glyph">{{if .IsFavorite}}‚òÖ{{else}}‚òÜ{{end}}</span> Star 
                <span class="badge bg-secondary ms-1 star-count">{{.StarCount}}</span>
            </button>
            <a href="/view/{{.Owner}}/{{.RepoName}}/{{.CurrentBranch}}/archive.zip" class="btn btn-sm btn-primary shadow-sm">
                <span class="me-1">‚¨á</span> Download
            </a>
        </div>
    </div>

    {{if not .IsEmpty}}
    {{/* Navigation Tabs */}}
    <ul class="nav nav-tabs mb-4 border-bottom-0">
        <li class="nav-item">
            <a class="nav-link {{if and (not .IsCommitsView) (not .IsDiffView)}}active fw-bold{{end}}" href="/view/{{.Owner}}/{{.RepoName}}/{{.CurrentBranch}}/">Code</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{if or .IsCommitsView .IsDiffView}}active fw-bold{{end}}" href="/view/{{.Owner}}/{{.RepoName}}/commits/{{.CurrentBranch}}/">Commits</a>
        </li>
    </ul>

    {{/* Last Commit Metadata Bar */}}
    {{if .LastCommit}}
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body bg-body-tertiary rounded border p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        {{slice .LastCommit.Author 0 1 | html}}
                    </div>
                    <div>
                        <span class="fw-semibold text-body">{{.LastCommit.Author}}</span>
                        <span class="text-secondary ms-2">{{.LastCommit.Message}}</span>
                    </div>
                </div>
                <div class="text-secondary small">
                    Last commit on {{.LastCommit.Date}}
                </div>
            </div>
        </div>
    </div>
    {{end}}

    {{/* Main Content Area */}}
    <div class="card shadow-sm">
        {{if .IsDiffView}}
            {{/* 1. Commit Diff View */}}
            <div class="card-header bg-body-tertiary p-3 border-bottom">
                <h5 class="mb-1">{{.SelectedCommit.Message}}</h5>
                <div class="small text-secondary">
                    <strong>{{.SelectedCommit.Author}}</strong> committed on {{.SelectedCommit.Date}} 
                    <code class="ms-2 text-primary">{{.SelectedCommit.Hash}}</code>
                </div>
            </div>
            <div class="card-body p-0 code-container">
                <pre style="margin:0; border:0;"><code class="language-diff">{{.Diff}}</code></pre>
            </div>

        {{else if .IsCommitsView}}
            {{/* 2. Commit History View (Paginated) */}}
            <div class="list-group list-group-flush">
                {{range .Commits}}
                <a href="/view/{{$.Owner}}/{{$.RepoName}}/commit/{{.Hash}}" class="list-group-item list-group-item-action p-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="mb-1 fw-bold text-body">{{.MessageShort}}</h6>
                            <p class="mb-0 small text-secondary">
                                <strong>{{.Author}}</strong> on {{.Date}}
                            </p>
                        </div>
                        <code class="commit-hash bg-body-tertiary px-2 py-1 rounded border">{{.ShortHash}}</code>
                    </div>
                </a>
                {{end}}
            </div>
            
            {{if or .PrevPage .NextPage}}
            <div class="card-footer bg-body-tertiary d-flex justify-content-center gap-2">
                {{if .PrevPage}}
                <a href="?page={{.PrevPage}}" class="btn btn-sm btn-outline-secondary px-4">Newer</a>
                {{else}}
                <button class="btn btn-sm btn-outline-secondary px-4" disabled>Newer</button>
                {{end}}

                {{if .NextPage}}
                <a href="?page={{.NextPage}}" class="btn btn-sm btn-outline-secondary px-4">Older</a>
                {{else}}
                <button class="btn btn-sm btn-outline-secondary px-4" disabled>Older</button>
                {{end}}
            </div>
            {{end}}

        {{else if .IsFile}}
            {{/* 3. Single File Viewer / Editor */}}
            <div class="card-header bg-body-tertiary border-bottom d-flex justify-content-between align-items-center py-2">
                <span class="font-monospace small text-body-secondary">{{.FileName}}</span>
                <div class="btn-group">
                    {{if eq $.Username $.Owner}}
                        <button class="btn btn-sm btn-outline-primary" id="editBtn" onclick="toggleEdit()">Edit</button>
                    {{end}}
                    <button class="btn btn-sm btn-outline-primary" onclick="copyToClipboard()">Copy</button>
                </div>
            </div>
            
            <div id="viewMode" class="code-container">
                <pre class="line-numbers"><code class="language-{{.Extension}}">{{.Content}}</code></pre>
            </div>

            {{if eq $.Username $.Owner}}
            <div id="editMode" class="d-none">
                <form action="/edit" method="POST">
                    <input type="hidden" name="owner" value="{{.Owner}}">
                    <input type="hidden" name="repo" value="{{.RepoName}}">
                    <input type="hidden" name="path" value="{{if .CurrentPath}}{{.CurrentPath}}/{{end}}{{.FileName}}">
                    <textarea name="content" class="form-control editor-textarea" rows="20">{{.Content}}</textarea>
                    <div class="card-footer bg-body-tertiary text-end border-top">
                        <button type="button" class="btn btn-sm btn-primary] me-2" onclick="toggleEdit()">Cancel</button>
                        <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
            {{end}}

        {{else if .Files}}
            {{/* 4. Directory Listing */}}
            <div class="list-group list-group-flush">
                {{range .Files}}
                <a href="/view/{{$.Owner}}/{{$.RepoName}}/{{$.CurrentBranch}}/{{if $.CurrentPath}}{{$.CurrentPath}}/{{end}}{{.Name}}" 
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                    <div class="d-flex align-items-center">
                        <span class="me-3 text-secondary">
                            {{if .IsURL}}üìÅ{{else}}üìÑ{{end}}
                        </span>
                        <span class="text-body">{{.Name}}</span>
                    </div>
                    {{if not .IsURL}}
                    <span class="text-secondary small">{{.Size}} bytes</span>
                    {{end}}
                </a>
                {{end}}
            </div>

            {{if eq $.Username $.Owner}}
            <div class="card-footer bg-body-tertiary border-top">
                <form action="/upload" method="POST" enctype="multipart/form-data" class="d-flex gap-2">
                    <input type="hidden" name="owner" value="{{.Owner}}">
                    <input type="hidden" name="repo" value="{{.RepoName}}">
                    <input type="hidden" name="path" value="{{.CurrentPath}}">
                    <div class="input-group input-group-sm w-auto">
                        <label class="input-group-text bg-white" for="fileUpload">Upload File</label>
                        <input type="file" name="file" class="form-control" id="fileUpload" required>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success px-3">Upload</button>
                </form>
            </div>
            {{end}}
        {{end}}
    </div>
    {{else}}
        {{/* 5. Empty Repository View */}}
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">Quick Setup</h2>
                    <p class="text-secondary">This repository is empty. Push some code via SSH.</p>
                </div>
                
                <div class="card mb-4 shadow-sm border">
                    <div class="card-header bg-body-tertiary py-3">
                        <h5 class="mb-0 fw-semibold text-primary">Create a new repository on the command line</h5>
                    </div>
                    <div class="card-body setup-code p-0">
                        <pre class="p-3 mb-0"><code>echo "# {{.RepoName}}" >> README.md
git init
git add README.md
git commit -m "first commit"
git branch -M main
git remote add origin ssh://git@{{.SSHAddr}}/{{.Owner}}/{{.RepoName}}.git
git push -u origin main</code></pre>
                    </div>
                </div>

                <div class="card shadow-sm border">
                    <div class="card-header bg-body-tertiary py-3">
                        <h5 class="mb-0 fw-semibold text-primary">Push an existing repository</h5>
                    </div>
                    <div class="card-body setup-code p-0">
                        <pre class="p-3 mb-0"><code>git remote add origin ssh://git@{{.SSHAddr}}/{{.Owner}}/{{.RepoName}}.git
git branch -M main
git push -u origin main</code></pre>
                    </div>
                </div>
            </div>
        </div>
    {{end}}
</div>

{{if or .IsFile .IsDiffView}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-diff.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
<script>
    const updatePrismTheme = () => {
        const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';
        document.getElementById('prism-dark').disabled = !isDark;
        document.getElementById('prism-light').disabled = isDark;
    };

    const observer = new MutationObserver(updatePrismTheme);
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['data-bs-theme'] });
    updatePrismTheme();

    function toggleEdit() {
        const view = document.getElementById('viewMode');
        const edit = document.getElementById('editMode');
        const btn = document.getElementById('editBtn');
        if (view && edit) {
            view.classList.toggle('d-none');
            edit.classList.toggle('d-none');
            btn.innerText = view.classList.contains('d-none') ? "Cancel" : "Edit";
        }
    }

    function copyToClipboard() {
        const code = document.querySelector('code').innerText;
        navigator.clipboard.writeText(code).then(() => {
            alert("Copied to clipboard!");
        });
    }
</script>
{{end}}

{{template "base/footer.tmpl" .}}