{{template "base/header.tmpl" .}}
<body>
    <div class="breadcrumb">
        <a href="/dashboard" class="btn-back">Dashboard</a> / 
        <strong>{{.Username}}</strong> / {{.RepoName}}
    </div>

    <table class="file-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            {{range .Files}}
            <tr>
                <td>
                    <span class="icon">{{if .IsFile}}ğŸ“„{{else}}ğŸ“{{end}}</span>
                    <a href="#">{{.Name}}</a>
                </td>
                <td>{{if .IsFile}}File{{else}}Directory{{end}}</td>
            </tr>
            {{else}}
            <tr>
                <td colspan="2">This repository is empty.</td>
            </tr>
            {{end}}
        </tbody>
    </table>
{{template "base/footer.tmpl" .}}